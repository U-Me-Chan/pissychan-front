extends layout.pug

block content
  h1 /#{tag}/ - #{board_name}
  div
    a(href='/' + tag) #{texts.up}

  include post_form_freestanding_post

  div.thread
    label.post_header
      - const post = thread
      include post_header_elements
    //- blockquote makes nice look in Links browser
    blockquote.post_message
      p !{thread.message}
      div.parent_thread.thread_info !{texts.parent_thread}:
        a(href=`/${tag}/${thread.parent_id}`)=` ${thread.parent_id}`
    each post in posts
      div.post(id=post.id)
        label.post_header
          include post_header_elements
        //- blockquote makes nice look in Links browser
        blockquote.post_message !{post.message}

  include post_form_freestanding_post
